@page
@model jhyf.Pages.Links.CreateModel

@{
    ViewData["Title"] = "Добавление ссылки";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<form method="post">
    <h1>Добавить cсылку</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input asp-for="Link.NameFromLink" class="form-control"  placeholder="Имя ссылки"/>
        <span asp-validation-for="Link.NameFromLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Link.Linki" class="form-control" placeholder="https://"/>
        <span asp-validation-for="Link.Linki" class="text-danger"></span>
    </div>
    <button type="submit">Добавить</button>
    <a asp-page="Index">Вернуться к списку</a>
</form>

    
<link rel="stylesheet" href="~/css/register.css">
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
